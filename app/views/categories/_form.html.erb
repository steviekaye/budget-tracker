<%= form_with url: categories_path, local: true do |form| %>

<div class="field">
  <div class="control category">
    <%= form.text_field :name, class: "input", placeholder: "Create New Category" %>

    <%= button_tag type: "submit", class: "button is-dark" do %>
    <i class="fas fa-plus"></i>
  <% end %>

</div>
</div>

<% end %>